    <script>
        function addTask() {
            // Get the input value
            var taskText = document.getElementById('taskInput').value;

            // Create a new card div
            var newCard = document.createElement('div');
            newCard.className = 'card';

            // Create the paragraph element for the task text
            var taskPara = document.createElement('p');
            taskPara.textContent = taskText;

            // Create the checkbox element
            var checkbox = document.createElement('input');
            checkbox.type = 'checkbox';

            // Create the delete button
            var deleteButton = document.createElement('button');
            deleteButton.className = 'delete-btn';
            deleteButton.textContent = 'Delete';

            // Add event listener to delete button
            deleteButton.onclick = function() {
                document.getElementById('taskList').removeChild(newCard);
            };

            // Add task text, checkbox, and delete button to the card
            newCard.appendChild(taskPara);
            newCard.appendChild(checkbox);
            newCard.appendChild(deleteButton);

            // Add the new card to the task list
            document.getElementById('taskList').appendChild(newCard);

            // Clear the input field
            document.getElementById('taskInput').value = '';
        }
    </script>

